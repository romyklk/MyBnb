{% extends 'base.html.twig' %}

{% block title %}Nos location du moment!{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Les annonces de nos hôtes</h1>
    <div class="row">
        {% for ad in ads %}
            {% set url = path('ads_show',{'slug':ad.slug}) %}
            <div class="col-md-4 mb-3">
                <div class="card bg-light-mb-3">
                    <div class="card-header text-center">
                        {{ ad.rooms }} chambres, <strong>{{ ad.price }}€uro/nuit</strong><br>
                        <small>Pas encore de note</small>
                    </div>
                    <a href="{{ url}}">
                        <img src="{{ ad.coverImage }}" alt="foto de l'appartement"
                             style="height: 200px;width: 100%; display: block">
                    </a>

                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ url }}">
                                {{ ad.title }}
                            </a>

                        </h4>
                        <p class="card-text">
                            {{ ad.introduction }}
                        </p>
                        <a href="{{ url }}" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
